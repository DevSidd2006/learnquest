# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Text-to-Speech API Key (Optional - for premium AI voices)
# Get this from the Google Cloud project where Text-to-Speech API is enabled
# If not set, will fall back to GEMINI_API_KEY or browser TTS
GOOGLE_TTS_API_KEY=your_tts_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (Optional - for local PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/learnquest

# Session Configuration (Optional)
# SESSION_SECRET=your_session_secret_here